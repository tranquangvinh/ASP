@model MVCEmail.Models.EmailFormModel
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="container">
    <div class="row">
        <section id="loginForm">
            <h2>@ViewBag.Title.</h2>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <h4>Send your comments.</h4>
                    <hr />
                    <div class="form-group">
                        @Html.LabelFor(m => m.FromName, new { @class = "col-md-3 control-label" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.FromName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.FromName)
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group" style="margin-top: 15px;">
                        @Html.LabelFor(m => m.FromEmail, new { @class = "col-md-3 control-label" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.FromEmail)
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group " style="margin-top: 15px;">
                        @Html.LabelFor(m => m.Message, new { @class = "col-md-3 control-label" })
                        <div class="col-md-9">
                            @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Message)
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group" style="margin-top: 15px;">
                        <div class="col-md-offset-3 col-md-9">
                            <input type="submit" class="btn btn-success" value="Send" />
                        </div>
                    </div>
                    <div class="clearfix"></div>
                }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
