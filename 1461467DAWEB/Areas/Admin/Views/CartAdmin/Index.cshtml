
@model PetaPoco.Page<ShopConnection.View_GioHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="col-md-3 col-sm-3 col-xs-12 form-group pull-right top_search">
    @using (Html.BeginForm("Search", "Product", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search for..." name="key">
            <span class="input-group-btn">
                <button class="btn btn-default" type="submit">Go!</button>
            </span>
        </div>
    }
</div>
<h2>Danh sách <small>Giỏ hàng</small></h2>
<div class="panel-body">
    <!-- Begin FooTable Hiding Columns -->
    <table id="hiding-columns-example-1" class="table" data-expand-first="true">
        <thead>
            <tr>
                <th>Mã giỏ hàng</th>
                <th>Username</th>
                <th>Tên người mua hàng</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Địa chỉ</th>
                <th>Tổng tiền</th>
                <th>Trạng thái</th>
                <th>Chi tiết đơn hàng</th>
                <th>Sửa</th>
                <th>Xóa</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.MaGioHang</td>
                    <td>@item.UserName</td>
                    <td>@item.TenNguoiMua</td>
                    <td>@item.Phone</td>
                    <td>@item.Email</td>
                    <td>@item.DiaChi</td>
                    <td>@item.TongTien</td>
                    <td>
                            @if (item.TrangThai == 1)
                            {
                                <span>Đang Giao</span>
                            }
                            else if (item.TrangThai == 2)
                            {
                                <span> Đã Giao</span>
                            }
                            else if (item.TrangThai == 3)
                            {
                                <span>Chưa thanh toán</span>
                            }
                            else if (item.TrangThai == 4)
                            {
                                <span> Đã thanh toán</span>
                            }
                    </td>
                    <td class="text-edit"><a href="@Url.Action("Index", "CartDetails", new { id = item.MaGioHang })">Chi tiết</a></td>
                    <td class="text-edit"><a href="@Url.Action("Edit", "Cart", new { id = item.MaGioHang })">Sửa</a></td>
                    <td class="text-delete"><a href="@Url.Action("Delete", "Cart", new { id = item.MaGioHang })">Xóa</a></td>
                </tr>
            }
        </tbody>
    </table>
    <!-- End FooTable Hiding Columns -->
    <div class="dataTables_paginate paging_simple_numbers" id="datatable-buttons_paginate">
        <ul class="pagination">
            @if (Model.CurrentPage > 1)
            {
                <li class="paginate_button previous disabled" id="datatable-buttons_previous">
                    <a href="@Url.Action("Index", "Cart", new { Page = Model.CurrentPage -1 })" aria-controls="datatable-buttons" data-dt-idx="0" tabindex="0">Previous</a>
                </li>
            }
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                if (i == Model.CurrentPage)
                {
                    <li class="paginate_button active">
                        <a href="@Url.Action("Index", "Cart", new { Page = i })" aria-controls="datatable-buttons" data-dt-idx="1" tabindex="0">@i</a>
                    </li>
                }
                else
                {
                    <li class="paginate_button">
                        <a href="@Url.Action("Index", "Cart", new { Page = i })" aria-controls="datatable-buttons" data-dt-idx="1" tabindex="0">@i</a>
                    </li>
                }

            }
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="paginate_button next" id="datatable-buttons_next">
                    <a href="@Url.Action("Index", "Cart", new { Page = Model.CurrentPage + 1 })" aria-controls="datatable-buttons" data-dt-idx="7" tabindex="0">Next</a>
                </li>
            }
        </ul>
    </div>
</div>

